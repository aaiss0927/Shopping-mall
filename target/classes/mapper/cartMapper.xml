<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Cart">
    <insert id="save" parameterType="cart">
        insert into cart_table(productName, productSku, productPrice, memberId, quantity)
        values(#{productName}, #{productSku}, #{productPrice}, #{memberId}, #{quantity})
    </insert>
    <delete id="delete" parameterType="Long">
        delete from cart_table where id=#{id}
    </delete>
    <select id="findByLoginId" parameterType="String" resultType="cart">
        select * from cart_table where memberId=#{loginId}
    </select>
</mapper>